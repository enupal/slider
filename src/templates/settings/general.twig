{% extends "enupal-slider/_layouts/settings" %}
{% import "_includes/forms" as forms %}

{% set settings = craft.enupalslider.getSettings() %}
{% set fullPageForm = true %}
{% set saveShortcutRedirect = 'enupal-slider/settings/general' %}

{% set saveButton %}
	<div class="buttons">
		<input class="btn submit" type="submit" value="{{ 'Save'|t }}">
	</div>
{% endset %}

{% set content %}

  <input type="hidden" name="action" value="enupal-slider/settings/save-settings">

  <div id="settings-cp">

    {% namespace 'settings' %}

		  {{ forms.textField({
			  label: "Plugin Name"|t,
			  id: 'pluginNameOverride',
			  name: 'pluginNameOverride',
			  instructions: "Intuitive, human-readable plugin name for the end user."|t,
			  value: settings['pluginNameOverride'],
			  placeholder: "Slider"|t,
			  autofocus: true,
			  first: true,
			  errors: ''
		  }) }}

		<hr>

        {{ forms.lightswitchField({
            label: 'Load Jquery'|t('enupal-slider'),
            instructions: 'If disabled it will prevent load Jquery. Please make sure Jquery is loaded in your site.',
            id: 'loadJquery',
            name: 'loadJquery',
            on: settings.loadJquery,
            onLabel: "On"|t('enupal-slider'),
            offLabel: "Off"|t('enupal-slider'),
            errors: settings.getErrors('loadJquery'),
        }) }}

	  {% endnamespace %}

  </div>

{% endset %}